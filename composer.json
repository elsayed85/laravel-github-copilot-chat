{
    "name": "elsayed85/laravel-github-copilot-chat",
    "description": "This is my package laravel-github-copilot-chat",
    "keywords": [
        "elsayed85",
        "laravel",
        "laravel-github-copilot-chat"
    ],
    "homepage": "https://github.com/elsayed85/laravel-github-copilot-chat",
    "license": "MIT",
    "authors": [
        {
            "name": "elsayed kamal",
            "email": "elsayedkamal581999@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.7",
        "illuminate/contracts": "^10.0",
        "laravel/prompts": "^0.1.5",
        "phppkg/cli-markdown": "*",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Elsayed85\\CopilotChat\\": "src/",
            "Elsayed85\\CopilotChat\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elsayed85\\CopilotChat\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-github-copilot-chat --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Elsayed85\\CopilotChat\\CopilotChatServiceProvider"
            ],
            "aliases": {
                "CopilotChat": "Elsayed85\\CopilotChat\\Facades\\CopilotChat"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
